@page
@model Web.Pages.Network.Posts.DeleteModel

@{
    ViewData["Title"] = "Remove Post";
}

<header>
<h1>Remove Post</h1>
</header>
<section>
<h4>Are you sure you want to remove this Post?</h4>
<hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Timestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Likes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Likes)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Post.PostId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
    </form>
</section>