@page
@model Web.Pages.Network.Posts.IndexModel

@{
    ViewData["Title"] = "Social Network";
}

<header class="jumbotron">
    <h1>Social Network</h1>
    <h2>By Samuel Baker</h2>
</header>
<section>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Likes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes)
            </td>
            <td>
                <a class="btn btn-dark" asp-page="./Edit" asp-route-id="@item.PostId">Edit</a> |
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.PostId">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>