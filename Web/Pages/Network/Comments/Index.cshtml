@page
@model Web.Pages.Network.Comments.IndexModel

@{
    ViewData["Title"] = "Social Network";
}

<header class="jumbotron">
    <h1>Social Network</h1>
    <h2>By Samuel Baker</h2>
</header>
<section>
<p>
    <a class="btn btn-info" asp-page="Create">Add Comment</a> |
    <a class="btn btn-secondary" asp-page="Index">Back to List</a> 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Post)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Author)
            </td>
            <td>
                <a class="btn btn-dark" asp-page="./Edit" asp-route-id="@item.CommentId">Edit</a> |
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.CommentId">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.CommentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>