@page
@model Web.Pages.Network.Comments.EditModel

@{
    ViewData["Title"] = "Edit Comment";
}

<header>
<h1>Edit Comment Details</h1>
</header>
<section>
<h4>Comment Details</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.CommentId" />
            <div class="form-group">
                <label asp-for="Comment.PostId" class="control-label"></label>
                <select asp-for="Comment.PostId" class="form-control" asp-items="ViewBag.PostID"></select>
                <span asp-validation-for="Comment.PostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label"></label>
                <textarea asp-for="Comment.Text" class="form-control"></textarea>
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</section>