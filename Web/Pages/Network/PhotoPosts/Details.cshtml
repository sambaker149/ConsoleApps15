@page
@model Web.Pages.Network.PhotoPosts.DetailsModel

@{
    ViewData["Title"] = "Photo Post Details";
}
<header>
<h1>Photo Post Details</h1>
</header>
<section>
<h4>Photo Post</h4>
<hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPost.Filename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoPost.Filename)
            <br/>
            <img src="~/images/@Model.PhotoPost.Filename" />
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPost.Caption)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoPost.Caption)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPost.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoPost.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPost.Timestamp)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoPost.Timestamp)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPost.Likes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhotoPost.Likes)
        </dd>
    </dl>
</section>
<section>
<div>
    <h4>Comments</h4>
    @if(Model.PhotoPost.Comments == null || Model.PhotoPost.Comments.Count() == 0)
    {
        <p>
            No comments have been posted yet!
        </p>
    }
    else
    {
        int count = 0;
        foreach(Comment comment in Model.PhotoPost.Comments)
        {
            count++;
            <p>
                @count. @comment.Text
            </p>
        }
    }
</div>
<hr />
<div>
    <a class="btn btn-danger" title="Should only be availble to the author"
       asp-action="Edit" asp-route-id="@Model.PhotoPost.PostId">
        Edit
    </a>
    <a class="btn btn-success" asp-action="Like" title="Like"
        asp-route-id="@Model.PhotoPost.PostId">
        <i class="bi bi-hand-thumbs-up"></i>
    </a>
    <a class="btn btn-warning" asp-action="Unlike" title="Unlike"
        asp-route-id="@Model.PhotoPost.PostId">
        <i class="bi bi-hand-thumbs-down"></i>
    </a>
    <a class="btn btn-info" asp-controller="Comments" 
        asp-action="Create" title="Add comment"
        asp-route-id="@Model.PhotoPost.PostId">
        <i class="bi bi-chat-left-text"></i>
        Comment
    </a>
    <a class="btn btn-secondary" asp-action="Index">&lt;&lt;Back to Photo Posts</a>
</div>
<hr />
</section>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.PhotoPost.PostId">Edit</a> |
    <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
</div>