@page
@model IndexModel;
@using ConsoleAppProject.App03;

@{
    ViewData["Title"] = "Student Marks";
}
<html>
<header class="jumbotron">
    <h1>Student Marks</h1>
    <h2>By Samuel Baker</h2>
</header>
<header>
    <p>
        This Application is designed to allow you to Create Students
        and be able to Enter their Marks, Edit their Details and
        Remove Students.
    </p>
</header>
<section>
<p>
    <a class="btn btn-success" asp-page="Create">Add Student</a> |
    <a class="btn btn-warning" asp-page="Analyse">Analyse Student Marks</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Marks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Grades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grades)
            </td>
            <td>
                <a class="btn btn-dark" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>