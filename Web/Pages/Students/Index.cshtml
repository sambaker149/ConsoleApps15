@page
@model IndexModel

@{
    ViewData["Title"] = "Student Marks";
}

<header class="jumbotron">
    <h1>Student Marks</h1>
    <h2>By Samuel Baker</h2>
</header>
<header>
    <p>
        This Application is designed to allow you to Create Students
        and be able to Enter their Marks, Edit their Details and
        Remove Students.
    </p>
</header>
<section>
<p>
    <a class="btn btn-info" asp-page="Create">Add Student</a> |
    <a class="btn btn-warning" asp-page="Analyse">Analyse Marks</a>
</p>
<table class="table">
    <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Mark)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Grade)
                </th>
                <th></th>
            </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                <a class="btn btn-dark" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>